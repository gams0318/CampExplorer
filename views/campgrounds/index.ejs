<% layout('layouts/boilerplate')%>

    <h1>ALL CAMPGROUNDS</h1>
    <div>
        <a class="btn btn-primary" href="/campgrounds/new">Add new Campsite</a>
    </div>

    <% for(let c of campgrounds){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(c.image.length){%>
                        <img class="img-fluid" alt="" src="<%=c.image[0].url%>">
                        <%} else{%>
                            <img class="img-fluid" alt="" src="https://source.unsplash.com/random/?campsite">
                            <%}%>


                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%=c.title%>
                        </h4>
                        <h5 class="card-text text-muted">
                            <%=c.location%>
                        </h5>
                        <p class="card-text">
                            <%=c.description%>
                        </p>
                        <a href="/campgrounds/<%=c._id%>" class="btn btn-primary">View <%=c.title%></a>
                    </div>

                </div>

            </div>

        </div>

        <%}%>